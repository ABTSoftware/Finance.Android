<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/bg_scichart_logo"
        android:src="@drawable/ic_scichart_logo_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scichart_word"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SciChartLogoTextViewStyle"
            android:textSize="9sp"
            android:text="@string/logoTextPoweredBy"
            android:layout_marginBottom="-3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:adjustViewBounds="true"
                android:src="@drawable/sci_chart_word"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                style="@style/SciChartLogoTextViewStyle"
                android:textSize="16sp"
                android:text="@string/logoTextSciTrademark"/>
        </LinearLayout>
    </LinearLayout>
</merge>
